<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
	<td class="quantity"><%= line_item.quantity %></td>
	<td class="title"><%= line_item.product.title %></td>
	<td class="price"><%= number_to_currency line_item.total_price %></td>
	<% unless @suppress_plus_minus_buttons %>
		<td class="buttons"><%= button_to '+', line_items_path(product_id: line_item.product), remote: true %></td>
		<td class="buttons"><%= button_to '-', line_item_path(line_item.id), method: :delete, params: {remove_one: true}, remote: true %></td>
	<% end %>
</tr>