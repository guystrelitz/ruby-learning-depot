<article>
	<% if notice %>
		<aside id="notice"><%= notice %></aside>
	<% end %>

	<h2><%= t '.title' %></h2>
	<table>
		<%= render(cart.line_items) %>
		<tfoot>
			<tr>
				<th colspan="2">Total:</th>
				<th class="price"><%= number_to_currency cart.total_price %></th>
				<td colspan="2">&nbsp;</td>
			</tr>
		</tfoot>
	</table>

	<div class="actions">
		<%= button_to t('.empty'), cart, method: :delete, remote: true, data: {confirm: 'Are you sure?'}, class: 'empty_cart' %>
		<%= button_to t('.checkout'), new_order_path, method: :get, class: 'checkout' %>
	</div>
</article>
